<section id="todos">
  <header>
    <h2>Editing: "<%= @list[:name] %>"</h2>
    <ul>
      <li><a class="delete" href="/lists/<%= params[:id] %>/destroy">Delete Lists</a></li>
        <form action="/list/<%=@list_id%>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form> 
      </li>
    </ul>
  </header>
</section>

<form action="/list/<%=@list_id%>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for your list: </label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd> 
  <dl>
  <fieldset class="actions">
    <input type="submit" value="Update">
    <a href="/list/<%=params[:id]%>">Cancel</a>
  </fieldset>
</forms>
