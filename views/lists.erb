<ul id="lists">
  <% sort_lists(@lists) do |list| %>
    <li class="<%= list_class(list) %>" >
      <a href="/list/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining_count(list)%> / <%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
</ul>  

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Create a new list</a>
<% end%>
